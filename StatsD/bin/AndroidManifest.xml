<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.statsd"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.statsd.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.statsd.AddPlayer"
            android:label="@string/title_activity_add_player" >
        </activity>
        <activity
            android:name="com.example.statsd.PlayerStatistics"
            android:label="@string/title_activity_player_statistics" >
        </activity>
        <activity
            android:name="com.example.statsd.AddMatch"
            android:label="@string/title_activity_add_match" >
        </activity>
        <activity
            android:name="com.example.statsd.MatchStatistics"
            android:label="@string/title_activity_match_statistics" >
        </activity>
        <activity
            android:name="com.example.statsd.SingleMatch"
            android:label="@string/title_activity_single_match" >
        </activity>
        <activity
            android:name="com.example.statsd.AddInings"
            android:label="@string/title_activity_add_inings" >
        </activity>
    </application>

</manifest>
